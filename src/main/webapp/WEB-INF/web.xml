<?xml version="1.0" encoding="utf-8" ?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
      <servlet-name>ProcessArticle</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.ProcessArticle</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ProcessArticle</servlet-name>
      <url-pattern>/save_article</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>CategoryView</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.CategoryView</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>CategoryView</servlet-name>
      <url-pattern>/category/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>AdminCategoryView</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.AdminCategoryView</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>AdminCategoryView</servlet-name>
      <url-pattern>/admin/category/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>ArticleView</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.ArticleView</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ArticleView</servlet-name>
      <url-pattern>/article/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>FacebookLoginServlet</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.FacebookLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>FacebookLoginServlet</servlet-name>
      <url-pattern>/facebook_user_login</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>FacebookRedirect</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.FacebookRedirect</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>FacebookRedirect</servlet-name>
      <url-pattern>/facebook_redirect</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>ProcessComment</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.ProcessComment</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ProcessComment</servlet-name>
      <url-pattern>/comment</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>DeleteArticle</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.DeleteArticle</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>DeleteArticle</servlet-name>
      <url-pattern>/admin/article/delete</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>UpdateArticleView</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.UpdateArticleView</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>UpdateArticleView</servlet-name>
      <url-pattern>/admin/article/update/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>UpdateArticle</servlet-name>
      <servlet-class>com.erich0929.webapp.blog.servlet.UpdateArticle</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>UpdateArticle</servlet-name>
      <url-pattern>/admin/article/update</url-pattern>
  </servlet-mapping>
</web-app>
